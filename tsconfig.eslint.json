{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.tsx",
    "src/**/*.jsx",
    "src/**/*.d.ts",
    "public/**/*.ts",
    "public/**/*.js",
    "features/**/*.ts",
    "scripts/**/*.ts",
    "scripts/**/*.mjs",
    "public/**/*.d.ts",
    "./*.json",
    "./*.js",
    "./*.tsx",
    "./*.ts",
    "./*.*.js"
  ],
  "exclude": ["libs", "patches"]
}
